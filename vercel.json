{
  "version": 2,
  "builds": [
    { "src": "api/shortener.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/shortener.js" },
    { "source": "/", "destination": "/src/index.html" },
    { "source": "/sobre", "destination": "/src/sobre.html" },
    { "source": "/qr-code", "destination": "/src/qr-code.html" },
    { "source": "/contato", "destination": "/src/contato.html" },
    { "source": "/src/css/(.*)", "destination": "/src/css/$1" },
    { "source": "/src/js/(.*)", "destination": "/src/js/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/src/404.html" }
  ],
  "env": {
    "BITLY_TOKEN": "56931b2aaf10b2fa3e2e511c1372b11602a48641"
  },
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
