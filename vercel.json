{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/src/$1" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/src/index.html" },
    { "source": "/sobre", "destination": "/src/sobre.html" },
    { "source": "/contato", "destination": "/src/contato.html" },
    { "source": "/qr-code", "destination": "/src/qr-code.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
