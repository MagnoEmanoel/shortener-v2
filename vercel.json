{
  "version": 2,
  "builds": [
    {
      "src": "api/shortener.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/shortener.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/sobre",
      "dest": "/sobre.html"
    },
    {
      "src": "/qr-code",
      "dest": "/qr-code.html"
    },
    {
      "src": "/contato",
      "dest": "/contato.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/src/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/src/js/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    }
  ],
  "env": {
    "BITLY_TOKEN": "56931b2aaf10b2fa3e2e511c1372b11602a48641"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
