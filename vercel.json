{
  "version": 2,
  "builds": [
    {
      "src": "api/shortener.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/shortener.js"
    },
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/sobre",
      "destination": "/src/sobre.html"
    },
    {
      "source": "/qr-code",
      "destination": "/src/qr-code.html"
    },
    {
      "source": "/contato",
      "destination": "/src/contato.html"
    },
    {
      "source": "/css/(.*)",
      "destination": "/src/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/src/js/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "source": "/(.*)",
      "destination": "/src/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
