{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/sobre",
      "destination": "/src/sobre.html"
    },
    {
      "source": "/qr-code",
      "destination": "/src/qr-code.html"
    },
    {
      "source": "/contato",
      "destination": "/src/contato.html"
    },
    {
      "source": "/(.*)",
      "destination": "/src/$1"
    }
  ]
}
