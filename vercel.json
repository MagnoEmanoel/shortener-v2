{
  "version": 2,
  "builds": [
    {
      "src": "api/shortener.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/shortener.js"
    },
    {
      "src": "/",
      "dest": "src/index.html"
    },
    {
      "src": "/sobre",
      "dest": "src/sobre.html"
    },
    {
      "src": "/qr-code",
      "dest": "src/qr-code.html"
    },
    {
      "src": "/contato",
      "dest": "src/contato.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "src/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "src/js/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "src/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
