{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/shortener.js"
    },
    {
      "src": "/sobre",
      "dest": "sobre.html"
    },
    {
      "src": "/qr-code",
      "dest": "qr-code.html"
    },
    {
      "src": "/contato",
      "dest": "contato.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "src/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "src/js/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/404.html"
    }
  ]
}
