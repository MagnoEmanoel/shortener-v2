{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/sobre", "dest": "/sobre.html" },
    { "src": "/contato", "dest": "/contato.html" },
    { "src": "/qr-code", "dest": "/qr-code.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
