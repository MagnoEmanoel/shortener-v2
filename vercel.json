{
  "version": 2,
  "builds": [
    {
      "src": "api/shortener.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
  {
    "source": "/",
    "destination": "/index.html"
  },
  {
    "source": "/sobre",
    "destination": "/sobre.html"
  },
  {
    "source": "/qr-code",
    "destination": "/qr-code.html"
  },
  {
    "source": "/contato",
    "destination": "/contato.html"
  },
  {
    "source": "/css/(.*)",
    "destination": "/src/css/$1"
  },
  {
    "source": "/js/(.*)",
    "destination": "/src/js/$1"
  },
  {
    "source": "/assets/(.*)",
    "destination": "/assets/$1"
  },
  {
    "source": "/(.*)",
    "destination": "/404.html"
  }
],
  "env": {
    "BITLY_TOKEN": "56931b2aaf10b2fa3e2e511c1372b11602a48641"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
